{
  "name": "Offer Selection",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
    }
  ],
  "presets": [
    {
      "name": "Offer Selection"
    }
  ]
}
{% endschema %}

